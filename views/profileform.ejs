<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Node Starter</title>
    <!-- load local stylesheet (css) -->
    <link rel="stylesheet" href="/styles.css" />
    <!-- loading jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <form class="profileform"
          method="post"
          action="/profileform">
      <p><label>Name*: <input name="name" placeholder="Wendy Wellesley" required></label></p>

      <p><label>Wellesley Username*: <input name="username" placeholder="ww123" required></label></p>
      
      <p><label>Pronouns: <input name="pronouns" placeholder="they/them"></label></p>
      
      <p><label>Class Year*: <input name="classyear" placeholder="2000" required></label></p>
      
      <p class="majors"><label>Major*:
          <select name="major" required>
            <option>choose major</option>
    
            <% majors.forEach( elt => { %>
                    <option value="<%= elt %>"><%= elt %></option>
            <% }) %>

          </select>
        </label></p>
        
        <p class="majors"><label>Add another major:
          <select name="major2">
            <option>choose major</option>
    
            <% majors.forEach( elt => { %>
                    <option value="<%= elt %>"><%= elt %></option>
            <% }) %>

          </select>
        </label></p>
        
        <p class="minors"><label>Minor:
          <select name="minor">
            <option>choose minor</option>
    
            <% minors.forEach( elt => { %>
                    <option value="<%= elt %>"><%= elt %></option>
            <% }) %>

          </select>
        </label></p>
        
        Region:
        <p class="countries"><label>
          <select name="country" required>
            <option>Country*</option>
    
            <% countries.forEach( elt => { %>
                    <option value="<%= elt %>"><%= elt %></option>
            <% }) %>

          </select>
        </label></p>

        <p class="states"><label>
          <select name="state">
            <option>State (US)</option>
    
            <% states.forEach( elt => { %>
                    <option value="<%= elt %>"><%= elt %></option>
            <% }) %>

          </select>
        </label></p>

        <p><label><input name="city" placeholder="City"></label></p>
      
        Bio:
        <p><label><textarea rows="3" cols="30" name="bio" 
          placeholder="Type something..."></textarea></label></p>
        
        Field:
        <p><label><textarea rows="3" cols="30" name="field" 
          placeholder="Type something..."></textarea></label></p>
        
        Interests:
        <p><label><textarea rows="3" cols="30" name="interests" 
          placeholder="Type something..."></textarea></label></p>

        <p><button type="submit">Submit</button></p>
    </form>
</body>
</html>
